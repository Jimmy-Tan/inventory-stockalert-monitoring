@model Project.Models.SupplierProduct

@{
    ViewData["Title"] = "Tambah Produk ke Supplier";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">➕ Tambah Produk ke Supplier</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <input type="hidden" asp-for="SupplierId" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="ProductId" class="form-label">Pilih Produk</label>
                    <select asp-for="ProductId" class="form-select" asp-items="ViewBag.ProductId">
                        <option value="">-- Pilih Produk --</option>
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success">💾 Tambah Produk</button>
                    <a asp-controller="Suppliers" asp-action="Details" asp-route-id="@Model.SupplierId" class="btn btn-secondary">↩️ Batal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}