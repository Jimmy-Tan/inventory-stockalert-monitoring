@using System.Linq
@model Project.Models.Product

@{
    ViewData["Title"] = "Detail Produk";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">📦 Detail Produk</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-3">
                <dt class="col-sm-3">Nama Produk</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Kategori</dt>
                <dd class="col-sm-9">@Model.Category?.Name</dd>

                <dt class="col-sm-3">Stok Saat Ini</dt>
                <dd class="col-sm-9">@Model.Quantity</dd>

                <dt class="col-sm-3">Stok Minimum</dt>
                <dd class="col-sm-9">@Model.MinimumStock</dd>
            </dl>

            @if (Model.StockPerSuppliers != null && Model.StockPerSuppliers.Any())
            {
                <h5 class="mt-4 mb-3">📋 Stok Berdasarkan Supplier</h5>
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Supplier</th>
                            <th>Jumlah</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model.StockPerSuppliers)
                        {
                            <tr>
                                <td>@s.Supplier?.Name</td>
                                <td>@s.Quantity</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted fst-italic">Belum ada data stok per supplier.</p>
            }

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">✏️ Edit</a>
                <a asp-action="Index" class="btn btn-secondary">↩️ Kembali ke Daftar</a>
            </div>
        </div>
    </div>
</div>
