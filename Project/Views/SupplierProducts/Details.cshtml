@model Project.Models.Supplier

@{
    ViewData["Title"] = "Detail Supplier";
}

<h1>Detail Supplier</h1>

<p><strong>Nama:</strong> @Model.Name</p>
<p><strong>Kontak:</strong> @Model.Contact</p>

<h4>Produk yang Disupply:</h4>

@if (Model.SupplierProducts.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Nama Produk</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SupplierProducts)
            {
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>
                        <a asp-controller="SupplierProducts" asp-action="Delete" asp-route-id="@item.Id">Hapus</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>Belum ada produk.</em></p>
}

<a asp-controller="SupplierProducts" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-primary">+ Tambah Produk</a>
<a asp-action="Index" class="btn btn-secondary">Kembali</a>
