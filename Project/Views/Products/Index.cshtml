@model IEnumerable<Project.Models.Product>

@{
    ViewData["Title"] = "Daftar Produk";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">📦 Daftar Produk</h3>
        <a class="btn btn-success fw-semibold" asp-action="Create">
            ➕ Tambah Produk
        </a>
    </div>

    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-primary text-center">
            <tr>
                <th>Nama Produk</th>
                <th>Kategori</th>
                <th>Stok</th>
                <th>Stok Minimum</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Category?.Name</td> <!-- gunakan Name, bukan ID -->
                    <td>@item.Quantity</td>
                    <td>@item.MinimumStock</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Detail</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Yakin ingin menghapus produk ini?');">Hapus</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
