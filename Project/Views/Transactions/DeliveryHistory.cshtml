@model IEnumerable<Project.Models.Transaction>

@{
    ViewData["Title"] = "Riwayat Pengiriman Barang";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">🚚 Riwayat Pengiriman Barang</h2>
        <form method="get" asp-action="ExportDeliveryHistory" class="d-inline-block">
            <input type="hidden" name="startDate" value="@Context.Request.Query["startDate"]" />
            <input type="hidden" name="endDate" value="@Context.Request.Query["endDate"]" />
            <input type="hidden" name="productId" value="@Context.Request.Query["productId"]" />
            <input type="hidden" name="storeId" value="@Context.Request.Query["storeId"]" />
            <input type="hidden" name="supplierId" value="@Context.Request.Query["supplierId"]" />
            <button type="submit" class="btn btn-success">📥 Export ke Excel</button>
        </form>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Tanggal Awal</label>
                        <input type="date" name="startDate" value="@Context.Request.Query["startDate"]" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Tanggal Akhir</label>
                        <input type="date" name="endDate" value="@Context.Request.Query["endDate"]" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Produk</label>
                        <select name="productId" class="form-control">
                            <option value="">-- Semua Produk --</option>
                            @foreach (var p in ViewBag.Products as List<Project.Models.Product>)
                            {
                                <option value="@p.Id">@p.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Supplier</label>
                        <select name="supplierId" class="form-control">
                            <option value="">-- Semua Supplier --</option>
                            @foreach (var s in ViewBag.Suppliers as List<Project.Models.Supplier>)
                            {
                                <option value="@s.Id">@s.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="mt-3 d-flex justify-content-between">
                    <div>
                        <button type="submit" class="btn btn-primary">🔍 Filter</button>
                        <a asp-action="DeliveryHistory" class="btn btn-secondary">🔄 Reset</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover border">
                <thead class="table-dark">
                    <tr>
                        <th>Tanggal</th>
                        <th>Produk</th>
                        <th>Supplier</th>
                        <th>Toko</th>
                        <th>Qty Keluar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.Date.ToString("yyyy-MM-dd")</td>
                            <td>@t.Product?.Name</td>
                            <td>@t.Supplier?.Name</td>
                            <td>@t.Store?.Name</td>
                            <td>@t.QtyOut</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Tidak ada data pengiriman untuk filter yang dipilih.
        </div>
    }
</div>
