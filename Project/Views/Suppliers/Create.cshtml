@model Project.Models.Supplier

@{
    ViewData["Title"] = "Tambah Supplier";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">➕ Tambah Supplier Baru</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Masukkan nama supplier" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Contact" class="form-label fw-semibold"></label>
                    <input asp-for="Contact" class="form-control" placeholder="Masukkan kontak (Email / No. HP)" />
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">← Kembali</a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Simpan
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
