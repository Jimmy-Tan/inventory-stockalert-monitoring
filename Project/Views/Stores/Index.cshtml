@model IEnumerable<Project.Models.Store>

@{
    ViewData["Title"] = "Daftar Toko";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">🏬 Daftar Toko</h4>
            <a asp-action="Create" class="btn btn-light btn-sm">+ Tambah Toko</a>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-secondary">
                    <tr>
                        <th>Nama</th>
                        <th>Alamat</th>
                        <th class="text-center" style="width: 200px;">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var store in Model)
                    {
                        <tr>
                            <td>@store.Name</td>
                            <td>@store.Address</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@store.Id" class="btn btn-warning btn-sm">✏️ Edit</a>
                                <a asp-action="Delete" asp-route-id="@store.Id" class="btn btn-danger btn-sm">🗑️ Hapus</a>
                                <a asp-controller="Transactions" asp-action="CreateBarangKeluarToStore" asp-route-storeId="@store.Id" class="btn btn-success btn-sm">📦 Kirim</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
